<section class="products-show">

  <header class="page-header">
    <h1><%= link_to @product.category.name, @product.category %> &raquo; <%= @product.name %></h1>
  </header>

  <article class="product-detail">

    <div class="row">

      <div class="col-sm-4">
        <%= image_tag @product.image.url, class: 'main-img' %>
      </div>

      <div class="col-sm-8">
        <dl class="dl-horizontal">
          <dt>Name</dt>
          <dd><%= @product.name %></dd>
          <dt>Description</dt>
          <dd><%= @product.description %></dd>
          <dt>Quantity</dt>
          <dd><%= @product.quantity %></dd>
          <dt>Price</dt>
          <dd><%= @product.price %></dd>
        </dl>
      </div>
    </div>
    <br>

    <div>
      <h3>Customer reviews</h3><br>
        <% @product.ratings.each do |rating| %>
          <% user = User.find(rating.user_id) %>
          <dl>
            <p>- <b><%= user.name %> -  <%= rating.rating %>/5 </i></b></p>
            <dd><%= rating.description %></dd><br>
          </dl>
        <% end %>
    </div>
    <div>
      <h4>Leave a review</h4>
<%= @user_id %>
      <%= form_for :rating, url: product_ratings_path(@product) do |form| %>

        <div class="form-group">
          <%= form.label :rating %>
          <%= form.text_field :rating, class: 'form-control' %>
        </div>
        <div class="form-group">
          <%= form.label :description %>
          <%= form.text_field :description, class: 'form-control' %>
          <%= form.hidden_field :product_id, value: @product.id %>
          <%= form.hidden_field :user_id, value: @user_id %>

        </div>


      <%= form.submit 'Submit review', class: 'btn btn-primary' %>
      <% end %>
    </div>

  </article>

</section>
